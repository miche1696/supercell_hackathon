{
  "meta": {
    "project": "Bribe the Scale",
    "version": "1.0",
    "target_scene_resolution": {
      "width": 1600,
      "height": 900
    },
    "pixel_policy": {
      "base_pixel_scale": 4,
      "notes": "Design assets to snap cleanly to integer scaling; avoid subpixel details."
    },
    "naming_convention": "snake_case.png",
    "priority_levels": [
      "P0",
      "P1",
      "P2"
    ]
  },
  "prompt_system": {
    "combine_rule": "full_prompt = style_prompt + '\nSUBJECT: ' + subject_prompt",
    "style_blocks": [
      {
        "id": "style_cute_arcade_pixel_v1",
        "prompt": "Cute retro arcade pixel art, cohesive limited palette, high readability, clean silhouettes, soft rim light, top-left key light, slight dithering, crisp edges, no blur, no photorealism, playful mood, camera side view, game-ready sprite art"
      },
      {
        "id": "style_cute_arcade_pixel_v1_flat",
        "prompt": "Cute retro arcade pixel art, flat-shaded variant, reduced texture, strong outlines, consistent palette and lighting with previous assets, high contrast UI readability, no blur, no photorealism"
      }
    ],
    "global_negative_prompt": "photorealistic, 3d render, anti-aliased edges, soft blurry edges, low contrast, noisy background clutter, text artifacts, watermark, logo",
    "api_hints": {
      "transparent_assets": "Request transparent background (RGBA).",
      "opaque_assets": "Request fully opaque image, no alpha holes.",
      "consistency_hint": "Reuse same seed or reference style image for all assets in one batch."
    }
  },
